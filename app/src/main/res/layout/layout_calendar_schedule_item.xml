<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/calendarScheduleList_padding"
    android:paddingLeft="@dimen/calendarScheduleList_padding_large"
    android:paddingRight="@dimen/calendarScheduleList_padding_large"
    android:paddingTop="@dimen/calendarScheduleList_padding">

    <TextView
        android:id="@+id/textView_calendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendarScheduleList_item_margin"
        android:layout_weight="1"
        android:text="Schedule Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendarScheduleList_item_margin_small"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_calendarStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="~" />

        <TextView
            android:id="@+id/textView_calendarEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_calendarAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendarScheduleList_item_margin"
        android:layout_weight="1"
        android:text="Address" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/detailActivity_item_margin"
        android:layout_marginTop="@dimen/detailActivity_item_margin"
        android:background="#ccc" />

</LinearLayout>
